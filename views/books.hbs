<div class="container">
    <div align="center"> 
    </div>
	<div class="jumbotron"> 
        <p class="lead">Below are the books we have .</p>
        {{# each books}}
            <div>Title: {{ this.title }}</div>
            <div>ISBN #: {{ this.isbn }}</div> 
            <div>Author: {{ this.author}}</div>
            <div>Edition: {{ this.edition}}</div>
            <div>Owner: {{ this.owner}} </div>
            <div>price: ${{ this.price}}</div><br> 
            <div> <a type="submit" href="/user/login" class="btn btn-primary">Buy This Book</a></div><br> 
        {{/each}}
        <br><br>
         
        <div>
        <form class="form-horizontal" role="form" action="/book/search" method="POST"> 
        <p class="lead">You may search for a specific book .</p>
                <div class="form-group">
                    <label for="tirle" class="col-sm-3 control-label">Title</label>
                    <div class="col-sm-9">
                        <input type="text" name="title" id="email" placeholder="Title" class="form-control">
                    </div>
                </div> 
                <div class="form-group">
                    <label for="tirle" class="col-sm-3 control-label">ISBN</label>
                    <div class="col-sm-9">
                        <input type="text" name="isbn" id="email" placeholder="ISBN #" class="form-control">
                    </div>
                </div>  
                <div class="form-group">
                    <div class=" ">
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </div>
                </div>
            </form> <!-- /form --> 
        </div>
  </div>
</div>